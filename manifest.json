{
  "manifest_version": 3,
  "name": "ChatLog",
  "version": "1.0.0",
  "description": "Enhanced navigation and organization for AI chat conversations",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/assets/icon16.png",
    "48": "public/assets/icon48.png",
    "128": "public/assets/icon128.png"
  }
}
